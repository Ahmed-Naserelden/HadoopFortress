<configuration>

    <!-- NodeManager Work Directories -->
    <property>
        <name>yarn.nodemanager.local-dirs</name>
        <value>/usr/local/hadoop/yarn_data/nodemanager</value>
    </property>

    <property>
        <name>yarn.nodemanager.log-dirs</name>
        <value>/usr/local/hadoop/logs/nodemanager</value>
    </property>

    <!-- Enable High Availability (HA) -->
    <property>
        <name>yarn.resourcemanager.ha.enabled</name>
        <value>true</value>
    </property>

    <!-- Cluster ID -->
    <property>
        <name>yarn.resourcemanager.cluster-id</name>
        <value>yarn-cluster</value>
    </property>

    <!-- ResourceManager HA Node IDs -->
    <property>
        <name>yarn.resourcemanager.ha.rm-ids</name>
        <value>rm1,rm2,rm3</value>
    </property>

    <!-- ResourceManager Hostnames -->
    <property>
        <name>yarn.resourcemanager.hostname.rm1</name>
        <value>master1</value>
    </property>

    <property>
        <name>yarn.resourcemanager.hostname.rm2</name>
        <value>master2</value>
    </property>

    <property>
        <name>yarn.resourcemanager.hostname.rm3</name>
        <value>master3</value>
    </property>

    <!-- ResourceManager Addresses -->
    <property>
        <name>yarn.resourcemanager.address.rm1</name>
        <value>master1:8032</value>
    </property>

    <property>
        <name>yarn.resourcemanager.address.rm2</name>
        <value>master2:8032</value>
    </property>

    <property>
        <name>yarn.resourcemanager.address.rm3</name>
        <value>master3:8032</value>
    </property>

    <!-- Scheduler Addresses -->
    <property>
        <name>yarn.resourcemanager.scheduler.address.rm1</name>
        <value>master1:8030</value>
    </property>

    <property>
        <name>yarn.resourcemanager.scheduler.address.rm2</name>
        <value>master2:8030</value>
    </property>

    <property>
        <name>yarn.resourcemanager.scheduler.address.rm3</name>
        <value>master3:8030</value>
    </property>

    <!-- Resource Tracker Addresses -->
    <property>
        <name>yarn.resourcemanager.resource-tracker.address.rm1</name>
        <value>master1:8031</value>
    </property>

    <property>
        <name>yarn.resourcemanager.resource-tracker.address.rm2</name>
        <value>master2:8031</value>
    </property>

    <property>
        <name>yarn.resourcemanager.resource-tracker.address.rm3</name>
        <value>master3:8031</value>
    </property>

    <!-- Admin Addresses -->
    <property>
        <name>yarn.resourcemanager.admin.address.rm1</name>
        <value>master1:8033</value>
    </property>

    <property>
        <name>yarn.resourcemanager.admin.address.rm2</name>
        <value>master2:8033</value>
    </property>

    <property>
        <name>yarn.resourcemanager.admin.address.rm3</name>
        <value>master3:8033</value>
    </property>

    <!-- Automatic failover using ZooKeeper -->
    <property>
        <name>yarn.resourcemanager.ha.automatic-failover.enabled</name>
        <value>true</value>
    </property>

    <property>
        <name>yarn.resourcemanager.zk-address</name>
        <value>master1:2181,master2:2181,master3:2181</value>
    </property>

    <!-- Allow NodeManagers to register -->
    <property>
        <name>yarn.nodemanager.resource-monitor.enabled</name>
        <value>true</value>
    </property>

    <property>
        <name>yarn.nodemanager.aux-services</name>
        <value>mapreduce_shuffle</value>
    </property>

    <property>
        <name>yarn.nodemanager.aux-services.mapreduce_shuffle.class</name>
        <value>org.apache.hadoop.mapred.ShuffleHandler</value>
    </property>

</configuration>
